<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#005f00"
    tools:context="com.wallacestudios.projectbookworm.HomeActivity$PlaceholderFragment" >


<LinearLayout
        android:layout_width="match_parent"
    android:layout_height="230dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/dplCall"
        android:layout_width="46dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:src="@drawable/dplibrary_anniversary_logo" />
    
</LinearLayout>

    <EditText
        android:id="@+id/searchBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BBBBBB"
        android:ems="100" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:text="Search" />

<LinearLayout
    android:layout_width="428dp"
    android:layout_height="180dp"
    android:orientation="vertical" >



    <ImageButton
        android:id="@+id/calendarButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="15"
        android:src="@drawable/button_calendar" />

    <ImageButton
        android:id="@+id/newsHighlightsButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="15"
        android:src="@drawable/button_news" />

    <ImageButton
        android:id="@+id/specialCollectionsButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="15"
        android:src="@drawable/button_specialcollections" />

    <ImageButton
        android:id="@+id/specialServicesButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="15"
        android:src="@drawable/button_specialservices" />

    <ImageButton
        android:id="@+id/favoritesButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="15"
        android:src="@drawable/button_favorites" />
</LinearLayout>

<ImageButton
    android:id="@+id/loginwithamazon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="15"
    android:src="@drawable/button_amazon" />

</LinearLayout>