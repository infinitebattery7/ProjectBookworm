<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wallacestudios.projectbookworm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"></uses-permission> 

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LocationsActivity"
            android:label="@string/title_activity_locations" >
        </activity>
        <activity
            android:name=".ResearchActivity"
            android:label="@string/title_activity_research" >
        </activity>
        <activity
            android:name=".NewsEventsActivity"
            android:label="@string/title_activity_news_events" >
        </activity>
        <activity
            android:name=".CalendarActivity"
            android:label="@string/title_activity_calendar" >
        </activity>
        <activity
            android:name=".WebPanelActivity"
            android:label="@string/title_activity_web_panel"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wallacestudios.projectbookworm.HomeActivity" />
        </activity>
        <activity
            android:name=".LibraryMapActivity"
            android:label="@string/title_activity_library_map" >
        </activity>
        <activity
            android:name=".AmazonLoginActivity"
            android:label="@string/title_activity_amazon_login" >
        </activity>
        <activity
            android:name=".AmazonWishlistActivity"
            android:label="@string/title_activity_amazon_wishlist" >
        </activity>
    </application>

</manifest>
